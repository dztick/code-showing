-- [M1 Remote Logger]
-- Jalankan script ini, lalu klik M1 (attack biasa).
-- Akan muncul log di layar.

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local pg = LocalPlayer:WaitForChild("PlayerGui")

-- GUI
local screen = Instance.new("ScreenGui", pg); screen.ResetOnSpawn = false
local frame = Instance.new("Frame", screen)
frame.Size = UDim2.new(0,520,0,300)
frame.Position = UDim2.new(0,10,0,80)
frame.BackgroundColor3 = Color3.fromRGB(25,25,25)

local tb = Instance.new("TextLabel", frame)
tb.Size = UDim2.new(1,-10,1,-10)
tb.Position = UDim2.new(0,5,0,5)
tb.BackgroundTransparency = 1
tb.TextXAlignment = Enum.TextXAlignment.Left
tb.TextYAlignment = Enum.TextYAlignment.Top
tb.Font = Enum.Font.Code
tb.TextColor3 = Color3.fromRGB(0,255,0)
tb.TextSize = 14
tb.Text = "[M1 Logger] Klik kiri untuk serangan...\n"

local function addLog(s)
    tb.Text = tb.Text .. s .. "\n"
end

-- Hook semua RemoteFunction & RemoteEvent
for _,r in ipairs(game:GetDescendants()) do
    if r:IsA("RemoteEvent") or r:IsA("RemoteFunction") then
        if not r:GetFullName():lower():find("chat") then -- biar ga spam chat
            r.OnClientEvent:Connect(function(...)
                addLog("[RemoteEvent] " .. r:GetFullName() .. " | " .. table.concat({...}, ", "))
            end)
            if r:IsA("RemoteFunction") then
                r.OnClientInvoke = function(...)
                    addLog("[RemoteFunction] " .. r:GetFullName() .. " | " .. table.concat({...}, ", "))
                end
            end
        end
    end
end

addLog("[M1 Logger] Aktif. Klik M1, lihat nama remote + argumen yang keluar.")
