-- RemoteSpy by ChatGPT
-- Jalankan script ini di Xeno, lalu coba lakukan Dash, M1, Uppercut di game
-- Console akan menampilkan nama Remote + argumen yang dikirim

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Utility: stringify argumen biar gampang dibaca
local function stringify(value)
    local t = typeof(value)
    if t == "Vector3" or t == "CFrame" then
        return tostring(value)
    elseif t == "table" then
        local s = "{ "
        for k,v in pairs(value) do
            s = s .. "["..tostring(k).."]="..stringify(v)..", "
        end
        return s .. "}"
    else
        return tostring(value)
    end
end

-- Spy RemoteEvent
for _, v in pairs(getconnections(game.DescendantAdded)) do
    -- biar gak spam
end

local function hookRemote(obj)
    if obj:IsA("RemoteEvent") then
        local old; old = hookfunction(obj.FireServer, function(self, ...)
            print("[RemoteEvent Fired]:", self:GetFullName(), "Args:", stringify({...}))
            return old(self, ...)
        end)
    elseif obj:IsA("RemoteFunction") then
        local old; old = hookfunction(obj.InvokeServer, function(self, ...)
            print("[RemoteFunction Invoked]:", self:GetFullName(), "Args:", stringify({...}))
            return old(self, ...)
        end)
    end
end

-- Hook semua remote yang ada sekarang
for _, obj in ipairs(ReplicatedStorage:GetDescendants()) do
    if obj:IsA("RemoteEvent") or obj:IsA("RemoteFunction") then
        hookRemote(obj)
    end
end

-- Hook remote baru kalau muncul
ReplicatedStorage.DescendantAdded:Connect(function(obj)
    if obj:IsA("RemoteEvent") or obj:IsA("RemoteFunction") then
        hookRemote(obj)
    end
end)

print("âœ… RemoteSpy aktif! Silakan lakukan M1, Dash, Uppercut. Hasilnya keluar di console.")
